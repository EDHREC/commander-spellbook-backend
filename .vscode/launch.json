    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "program": "manage.py",
            "args": [
                "runserver",
                "8000"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python: Django / Test",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "program": "manage.py",
            "args": [
                "test"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python: Django / Import Combos",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "program": "manage.py",
            "args": [
                "import_combos"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Python: Django / Generate Variants",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "program": "manage.py",
            "args": [
                "generate_variants"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Python: Django Profiling",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "program": "manage.py",
            "args": [
                "runprofileserver",
                "--use-cprofile",
                "--prof-path=${workspaceFolder}/backend/temp/profiles"
            ],
            "preLaunchTask": "Profile Prelaunch",
            "django": true,
            "justMyCode": true
        }
    ]
}