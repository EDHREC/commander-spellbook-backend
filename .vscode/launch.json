    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Server",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "program": "manage.py",
            "args": [
                "runserver",
                "8000"
            ],
            "pythonArgs": [
                "-Wd"
            ],
            "envFile": "${workspaceFolder}/backend/.env",
            "preLaunchTask": "Prelaunch",
            "django": true,
            "justMyCode": false,
            "presentation": {
                "hidden": false,
                "group": "Django",
                "order": 1
            },
            "serverReadyAction" : {
                "action": "openExternally",
                "pattern": "Starting development server at (https?://[a-z0-9\\.:]+/?)",
                "uriFormat": "%s",
                "killOnServerStop": true
            }
        },
        {
            "name": "Start Server (Production)",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "program": "manage.py",
            "args": [
                "runserver",
                "8000",
                "--settings=backend.production_settings"
            ],
            "envFile": "${workspaceFolder}/backend/.env",
            "preLaunchTask": "Prelaunch",
            "django": true,
            "justMyCode": false,
            "presentation": {
                "hidden": false,
                "group": "Django",
                "order": 1
            },
            "serverReadyAction" : {
                "action": "openExternally",
                "pattern": "Starting development server at (https?://[a-z0-9\\.:]+/?)",
                "uriFormat": "%s",
                "killOnServerStop": true
            }
        },
