            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "program": "manage.py",
            "args": [
                "shell",
                "-c",
                "from spellbook.models import *; Variant.objects.all().delete(); Combo.objects.all().delete(); Feature.objects.all().delete();"
